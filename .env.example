# Clash of Clans Discord Bot Web Portal Environment Configuration
# Copy this file to .env and fill in your actual values

# Clash of Clans API Token (Required)
# Get your token from: https://developer.clashofclans.com/
API_TOKEN=your_clash_of_clans_api_token_here

# Flask Configuration (Optional - defaults to development)
FLASK_ENV=development
FLASK_DEBUG=True

# MongoDB Configuration (Optional - only needed for Discord bot features)
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DATABASE=your_database_name